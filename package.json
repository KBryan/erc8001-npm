{
  "name": "@elijahnomad/erc8001",
  "version": "0.1.0",
  "description": "ERC-8001 Agent Coordination Framework - Contracts and TypeScript SDK",
  "author": "Kwame",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src/contracts/**/*.sol",
    "!src/contracts/**/*.t.sol"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./contracts": "./src/contracts/index.sol",
    "./contracts/*": "./src/contracts/*"
  },
  "scripts": {
    "build": "tsup src/ts/index.ts --format cjs,esm --dts --clean",
    "build:contracts": "forge build",
    "test": "forge test",
    "test:ts": "vitest run",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/ts --ext .ts",
    "clean": "rm -rf dist out cache",
    "example": "npx ts-node examples/swap-example.ts"
  },
  "keywords": [
    "ethereum",
    "erc8001",
    "agents",
    "coordination",
    "multi-party",
    "atomic-swap",
    "solidity",
    "web3",
    "ai-agents",
    "defi",
    "intent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropic/erc8001-sdk"
  },
  "bugs": {
    "url": "https://github.com/anthropic/erc8001-sdk/issues"
  },
  "homepage": "https://github.com/anthropic/erc8001-sdk#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "viem": "^2.43.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "viem": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
